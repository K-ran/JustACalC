<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<android.support.v7.widget.CardView
    android:layout_margin="5dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:minHeight="100dp"
    android:layout_height="wrap_content">
    <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="@dimen/standard_vertical_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                style="@style/labelStyle"
                android:id="@+id/tvRightDrawerFunctionName"
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@id/tvRightDrawerFunctionName"
                style="@style/labelStyle"
                android:id="@+id/tvRightDrawerFunctionVotes"
                android:text="Useful: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvRightDrawerFunctionDescription"
                    android:text="Description"
                    style="@style/labelStyle"
                    android:maxHeight="250dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </ScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnRightDrawerAddButton"
                    android:layout_marginTop="10dp"
                    style="@style/rightDrawerButtonStyle"
                    android:text="Add"
                    android:layout_width="60dp"
                    android:layout_height="30dp"/>
                <ImageView
                    android:id="@+id/ivRightDrawerLikeButton"
                    android:background="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />
            </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>