<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<android.support.v7.widget.CardView
    android:layout_margin="2dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:minHeight="100dp"
    android:layout_height="wrap_content">
    <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="@dimen/standard_vertical_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <in.karanpurohit.justacalc.CustomViews.TextViewHelveticalBold
                android:textStyle="bold"
                style="@style/labelStyle"
                android:id="@+id/tvRightDrawerFunctionName"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/line"
                android:layout_below="@id/tvRightDrawerFunctionName"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <in.karanpurohit.justacalc.CustomViews.TextViewHelveticalNormal
                    android:id="@+id/tvRightDrawerFunctionDescription"
                    android:text="Description"
                    style="@style/labelStyle"
                    android:maxHeight="250dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </ScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <Button
                    android:textColor="@color/colorAccent"
                    android:id="@+id/btnRightDrawerAddButton"
                    style="@style/rightDrawerButtonStyle"
                    android:text="Add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivRightDrawerLikeButton"
                    android:layout_toEndOf="@+id/ivRightDrawerLikeButton"/>
                <in.karanpurohit.justacalc.CustomViews.TextViewHelveticalNormal
                    android:id="@+id/tvVoteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/btnRightDrawerAddButton"
                    android:layout_toEndOf="@+id/btnRightDrawerAddButton"/>
            </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>