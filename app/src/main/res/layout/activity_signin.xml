<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="100"
    android:background="@color/white"
    tools:context="in.karanpurohit.justacalc.SignInUp.SigninActivity">
    <FrameLayout
        android:layout_weight="30"
        android:id="@+id/SigninBannerFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/signinBannerImage"
            android:src="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:text="Sign in"
            android:textSize="30dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <ScrollView
        android:layout_weight="70"
        android:layout_below="@id/SigninBannerFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:inputType="textEmailAddress"
                android:layout_marginTop="50dp"
                style="@style/inputBox.form"
                android:hint="Email"
                android:id="@+id/etSigninEmail"
                />
            <EditText
                android:inputType="textPassword"
                style="@style/inputBox.form"
                android:hint="Password"
                android:layout_below="@id/etSigninEmail"
                android:id="@+id/etSiginPassword"
                />
            <Button
                style="@style/buttonStyle"
                android:layout_marginTop="30dp"
                android:layout_below="@id/etSiginPassword"
                android:id="@+id/btnActualSignin"
                android:text="Sign in"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="15dp"
                android:text="Don't have an account, Sign up here!"
                android:layout_below="@id/btnActualSignin"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
