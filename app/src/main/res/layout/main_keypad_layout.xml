<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Calculater.MainActivity">
    <TextView
        android:textSize="20dp"
        android:gravity="right|center_vertical"
        android:padding="@dimen/standard_horizontal_padding"
        android:id="@+id/tvExpression"
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="Expression"/>
    <TextView
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:id="@+id/tvResult"
        android:padding="@dimen/standard_horizontal_padding"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Result"/>
<LinearLayout
    android:layout_marginTop="@dimen/standard_horizontal_margin"
    android:layout_weight="70"
    android:weightSum="4"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp" >
    <android.support.v4.view.ViewPager
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/vpSwipeKeyboard"
        />
    <include
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        layout="@layout/basic_functions"/>
    <!--</include>-->
</LinearLayout>


</LinearLayout>
