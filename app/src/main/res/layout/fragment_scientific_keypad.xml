<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="4"
              android:orientation="vertical"
              tools:context="in.karanpurohit.justacalc.Calculater.NormalKeypadFragment">
    <!--First row-->
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            style="@style/keypadbuttonstyle"
            android:text="sin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvKBSin"/>
        <TextView
            style="@style/keypadbuttonstyle"
            android:text="cos"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvKBCos"/>
        <TextView
            style="@style/keypadbuttonstyle"
            android:text="tan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvKBTan"/>

    </LinearLayout>

    <!--Second row-->
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            style="@style/keypadbuttonstyle"
            android:text="ln"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvKBln"/>
        <TextView
            style="@style/keypadbuttonstyle"
            android:text="log"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvlog"/>
        <TextView
            style="@style/keypadbuttonstyle"
            android:text="@string/sqrt"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvKB6"/>
    </LinearLayout>
    <!--Third row-->
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tvKBPi"
            style="@style/keypadbuttonstyle"
            android:text="pi"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <TextView
            style="@style/keypadbuttonstyle"
            android:text="e"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvKBexponent"/>
        <TextView
            style="@style/keypadbuttonstyle"
            android:text="^"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvKBPower"/>
    </LinearLayout>
    <!--Fourth row-->
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            style="@style/keypadbuttonstyle"
            android:text="("
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvKBLeftBracket"/>
        <TextView
            style="@style/keypadbuttonstyle"
            android:text=")"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvKBRightBracket"/>
        <TextView
            style="@style/keypadbuttonstyle"
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>