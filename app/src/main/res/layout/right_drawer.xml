<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#f5f5f5"
              android:padding="15dp"
              android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:inputType="text"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@android:color/transparent"
            android:id="@+id/etSearchbox"
            android:gravity="center"
            android:hint="Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
    </android.support.v7.widget.CardView>
    <RadioGroup
        android:paddingTop="@dimen/standard_horizontal_padding"
        android:id="@+id/rgSelectSearchDomain"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <RadioButton
            android:textSize="17dp"
            android:padding="2dp"
            android:button="@android:color/transparent"
            android:id="@+id/rgbItem1"
            android:text="My functions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:padding="2dp"
            android:textSize="17dp"
            android:button="@android:color/transparent"
            android:id="@+id/rgbItem2"
            android:text="Global database"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <ProgressBar
        android:id="@+id/pbLoadingList"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:indeterminate="true" />
    <ListView
        android:layout_marginTop="@dimen/activity_horizontal_margin"
      android:drawSelectorOnTop="true"
      android:dividerHeight="10dp"
      android:divider="@android:color/transparent"
      android:id="@+id/lv_right_drawer_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    </ListView>
    <in.karanpurohit.justacalc.CustomViews.TextViewHelveticalNormal
        android:id="@+id/tvEmptyListItemView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="There are no results"
        android:gravity="center"
        style="@style/labelStyle"
        android:visibility="gone"
        />

</LinearLayout>
