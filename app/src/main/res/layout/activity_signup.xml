<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:id="@+id/llSigninBanner"
            android:layout_width="match_parent"
            android:layout_height="240dp">
            <ImageView
                android:src="@drawable/plus"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <in.karanpurohit.justacalc.CustomViews.TextViewHelveticalThin
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="Sign up"
                android:textSize="34dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <in.karanpurohit.justacalc.CustomViews.EditTextHelveticaNormal
            android:inputType="text"
            android:layout_marginTop="50dp"
            style="@style/inputBox"
            android:hint="Name"
            android:gravity="center"
            android:layout_below="@id/llSigninBanner"
            android:id="@+id/etSignupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <in.karanpurohit.justacalc.CustomViews.EditTextHelveticaNormal
            android:inputType="textEmailAddress"
            android:layout_below="@id/etSignupName"
            style="@style/inputBox"
            android:hint="Email"
            android:gravity="center"
            android:id="@+id/etSignupEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <in.karanpurohit.justacalc.CustomViews.EditTextHelveticaNormal
            android:inputType="textPassword"
            style="@style/inputBox"
            android:hint="Password"
            android:gravity="center"
            android:layout_below="@id/etSignupEmail"
            android:id="@+id/etSignupPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            style="@style/buttonStyle"
            android:layout_marginTop="30dp"
            android:layout_below="@id/etSignupPassword"
            android:id="@+id/btnActualSignup"
            android:text="Sign in"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <in.karanpurohit.justacalc.CustomViews.TextViewHelveticalNormal
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:text="Already have an account, Sign in here!"
            android:layout_below="@id/btnActualSignup"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</ScrollView>

