<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/white"
    tools:context="in.karanpurohit.justacalc.signupUp.signupActivity">
    <FrameLayout
        android:layout_weight="30"
        android:id="@+id/signupBannerFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/signupBannerImage"
            android:src="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:text="Sign up"
            android:textSize="30dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <ScrollView
        android:layout_weight="70"
        android:layout_below="@id/signupBannerFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:layout_marginTop="50dp"
                style="@style/inputBox.form"
                android:hint="Name"
                android:id="@+id/etsignupName"
                />
            <EditText
                android:layout_below="@id/etsignupName"
                style="@style/inputBox.form"
                android:hint="Email"
                android:id="@+id/etsignupEmail"
                />
            <EditText
                style="@style/inputBox.form"
                android:hint="Password"
                android:layout_below="@id/etsignupEmail"
                android:id="@+id/etSigupPassword"
                />
            <EditText
                style="@style/inputBox.form"
                android:hint="Confirm Password"
                android:layout_below="@id/etSigupPassword"
                android:id="@+id/etSigupCnfPassword"
                />
            <Button
                style="@style/buttonStyle"
                android:layout_marginTop="30dp"
                android:layout_below="@id/etSigupCnfPassword"
                android:id="@+id/btnActualsignup"
                android:text="Sign up"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="15dp"
                android:text="Aready have an account, Sign in here!"
                android:layout_below="@id/btnActualsignup"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
